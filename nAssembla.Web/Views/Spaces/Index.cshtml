@model IEnumerable<nAssembla.DTO.Space>

@{
    ViewBag.Title = "Spaces";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Spaces</h2>
<div class="row">
    <div class="col-lg-12">
        @if (Model != null)
        {
            foreach (var space in Model)
            {
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-lg-3">
                                <h3>@space.Name</h3>
                            </div>
                            <div class="col-lg-3">
			  @Html.ActionLink(space.Name, "SelectedSpace", "Spaces", space, new { @class="btn btn-success" })
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <p>Description    : @space.Description</p>
                        <p>
                            DefaultShowPage: @space.DefaultShowpage
                            Id             : @space.Id
                        </p>
                        <p>
                            Updated at  : @String.Format("{0:dd/MM/yyy}", space.UpdatedAt)
                            WikiName       : @space.WikiName
                        </p>
                    </div>
                </div>
            }
        }
    </div>
</div>
