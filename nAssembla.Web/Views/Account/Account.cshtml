@model nAssembla.DTO.User

@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        @if (Model != null)
        {
            <form class="form">
                <h2>Account</h2>
                <div class="form-group">
                    <label class="col-lg-4 control-label label-info">Email</label>
                    <label class="col-lg-8 control-label">@Model.Email</label>
                </div>
                <div class="form-group">
                    <label class="col-lg-4 control-label label-info">Id</label>
                    <label class="col-lg-8 control-label">@Model.Id</label>
                </div>
                <div class="form-group">
                    <label class="col-lg-4 control-label label-info">LoginName</label>
                    <label class="col-lg-8 control-label">@Model.LoginName</label>
                </div>
                <div class="form-group">
                    <label class="col-lg-4 control-label label-info">Name</label>
                    <label class="col-lg-8 control-label">@Model.Name</label>
                </div>
                <div class="form-group">
                    <label class="col-lg-4 control-label label-info">Organization</label>
                    <label class="col-lg-8 control-label">@Model.Organization</label>
                </div>                
            </form>
        }
    </div>
    <div class="col-lg-3"></div>
</div>
