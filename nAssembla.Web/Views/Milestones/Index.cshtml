@model IEnumerable<nAssembla.DTO.Milestone>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Milestones</h2>
<div class="row">
    <div class="col-lg-12">
        @if (Model != null)
        {
            foreach (var milestone in Model)
            {
                //Html.RenderPartial("_MilestoneInfo", milestone);
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @milestone.Title
                    </div>
                    <div class="panel-body">
                        <p>Description: @milestone.Description</p>
                        <p>Responsible: @milestone.ResponsibleUser</p>
                        <p>Created On : @milestone.CreatedOn</p>
                        <p>Due Date   : @milestone.DueDate</p>
                        <p>IsCompleted: @milestone.IsCompleted</p>
                    </div>
                    <div class="panel-footer">

                    </div>
                </div>
            }
        }
    </div>
</div>
